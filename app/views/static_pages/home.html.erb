<h1>Search for Photos</h1>

<%= form_with url: root_path, method: :get, local: true do |f| %>
  <%= f.label :user_id %><br>
  <%= f.text_field :user_id %><br><br>
  <%= f.submit "Search" %><br>
<% end %>

<% unless @photos.nil? %>
  <% @photos.each do |pic| %>
    <%= @title %>:<br>
    <%= image_tag "#{@url}"%><br>
  <% end %>
<% end %>